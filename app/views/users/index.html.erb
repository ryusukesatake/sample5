<h1>DM</h1>


<% if user_signed_in? %>
    <% @users.each do |u| %>
    <img src=<%= u.image %> class = "iconimage">
    <p><a href="/users/<%= u.id %>"><%= u.name %>さん</a></p>
    <% end %>


    
    <%= button_to "ログアウト", destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to "ユーザーを登録する", new_user_registration_path %>
    <br>
    <%= link_to "ログインする", new_user_session_path %>
<% end %>